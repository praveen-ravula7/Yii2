global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'node'
    static_configs:
      - targets: ['localhost:9100']
        labels:
          instance: '{{ ansible_hostname }}'

  - job_name: 'docker'
    static_configs:
      - targets: ['localhost:9323']
        labels:
          instance: '{{ ansible_hostname }}'

  - job_name: 'yii2-app'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          instance: '{{ ansible_hostname }}'
          application: 'yii2-app'
